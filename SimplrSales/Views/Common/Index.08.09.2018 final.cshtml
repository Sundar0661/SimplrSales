    </style>

    <script type="text/javascript">

        $(document).ready(function () {
            //    $(function () {

            $('#createPopupDialog').dialog({
                autoOpen: false,
                width: "60%",
                resizable: false,
                title: 'Details',
                modal: true,
                close: true,
                closeOnEscape: true,
                open: function (event, ui) { },
                close: function (event, ui) { },
                beforeClose: function (event, ui) {
                    $('#createPopupDialogHiddenId').show();
                    // debugger;
                    // alert('close');
                    // $(this).parents('.ui-dialog').removeClass('out').addClass('in');
                    //  $('#createPopupDialog').parents('.ui-dialog').removeClass('in').addClass('out');

                }
            });

            //$('#createPopupDialog').live("dialogclose", function () {
            //    alert('close');
            //});

            $('#deletePopupDialog').dialog({
                autoOpen: false,
                width: "25%",
                resizable: false,
                title: 'Details',
                modal: true,
                // closeOnEscape: true,
                open: function (event, ui) {
                },
                buttons: {
                    "Ok": function () {
                        $(this).dialog('close');
                        DeleteForm();
                    },
                    "Cancel": function () {
                        $(this).dialog('close');
                    }
                }
            });

            $('#messageDialog').dialog({
                autoOpen: false,
                width: "30%",
                resizable: false,
                title: 'Message',
                modal: true,
                //closeOnEscape: true,
                open: function (event, ui) {
                },
                buttons: {
                    "Ok": function () {
                        $(this).dialog('close');
                    }
                }
            });

            $('#dialog').dialog({
                autoOpen: false,
                width: "50%",
                resizable: false,
                title: 'Details',
                modal: true,
                // close: 'slide',

                closeOnEscape: true,
                open: function (event, ui) { },
                beforeClose: function (event, ui) {
                    $('#dialogHiddenId').show();
                },
                buttons: {
                    "Close": function () {
                        $('#dialog').dialog('close');
                    }
                },

            });

            $('#dialog').live("dialogclose", function () {
                $('#dialog').parents('.ui-dialog').removeClass('in').addClass('out');
            });
            if ('@ViewBag.Message' != '' && '@ViewBag.Message' != null) {
                $('#messageDialog').dialog('open');
                $('#messageDialogId').text('@ViewBag.Message');
                //  alert('@ViewBag.Message');
            }
        });




    </script>



