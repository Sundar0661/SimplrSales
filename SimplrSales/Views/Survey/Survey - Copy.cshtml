            qry_noofscreen = qry_noofscreen == "null" ? "" : qry_noofscreen;


            if (qry_chkname != null && qry_chkname != "" && qry_chkname != undefined) {

                document.getElementById("txtChecklistName").style.backgroundColor = "#ccc";
