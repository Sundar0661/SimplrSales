        margin-top: 6px;
    }

    .col-20 {
        float: left;
        width: 20%;
        margin-top: 6px;
        text-align: left;
    }

    .col-30 {
        float: left;
        width: 30%;
        margin-top: 6px;
        text-align: left;
    }



    .row {
        line-height: .8;
        /*text-align: left;*/
    }
</style>


